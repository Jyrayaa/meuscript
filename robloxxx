  <script>
    const scripts = {
      autofarm: `-- Script Auto Farm Roblox
while true do
  wait(1)
  game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = workspace.Mobs.Mob1.HumanoidRootPart.CFrame
end`,

      fly: `-- Script de Modo Voo
